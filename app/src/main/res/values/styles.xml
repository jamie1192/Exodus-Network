<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warmindPrimary</item>
        <item name="colorPrimaryDark">@color/warmindDark</item>
        <item name="colorAccent">@color/warmindAccent</item>
        <item name="android:windowBackground">@color/bungieBackground</item>
        <item name="android:tabWidgetStyle">@style/Base.Widget.Design.TabLayout</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="alertDialogStyle">@style/AlertDialogCustom</item>
        <!--<style name="dialog" parent="@android:style/Theme.Dialog">-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@color/warmindAccent</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorPrimary">@color/warmindPrimary</item>
        <item name="colorPrimaryDark">@color/warmindDark</item>
        <item name="colorAccent">@color/warmindAccent</item>
        <item name="android:windowBackground">@color/bungieBackground</item>
    </style>

    <style name="ToolbarDropdownTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorPrimary">@color/warmindPrimary</item>
        <item name="colorPrimaryDark">@color/warmindDark</item>
        <item name="colorAccent">@color/warmindAccent</item>
        <item name="android:colorBackground">@color/bungieBackground</item>
    </style>

    <style name="MaterialCustomTheme" parent="MaterialDrawerTheme.TranslucentStatus">
        <!-- ...and here we setting appcompatâ€™s color theme attrs -->
        <item name="colorPrimary">@color/warmindPrimary</item>
        <item name="colorPrimaryDark">@color/warmindDark</item>
        <item name="colorAccent">@color/warmindAccent</item>
        <item name="android:windowBackground">@color/bungieBackground</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/bungieBackground</item>
        <item name="material_drawer_primary_text">@color/colorWhite</item>
        <item name="material_drawer_secondary_text">@color/placeholderHint
        </item>
        <item name="material_drawer_hint_text">@color/placeholderHint</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">#1fffd700</item>

        <item name="material_drawer_selected_text">@color/warmindAccent</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_dark_primary_text
        </item>

    </style>

    <style name="WarmindSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/warmindAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/placeholderHint</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42e4e4e4</item>

    </style>


