<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/checklist_text_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/checklist_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Latent Memory #1"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/checklist_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checklist_item_name"
            android:textColor="@color/placeholderHint"
            android:textStyle="italic"
            android:textSize="15sp"
            android:visibility="gone"
            />

    </RelativeLayout>

</FrameLayout>