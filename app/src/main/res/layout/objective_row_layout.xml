<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inventory_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

       <LinearLayout
           android:id="@+id/objective_header_container"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="70dp"
           android:background="#2d2d2d"
           android:padding="10dp"
           android:weightSum="2"
           android:orientation="vertical"
           >

           <TextView
               android:id="@+id/objective_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center_vertical|start"
               android:textSize="18sp"
               android:textStyle="bold"

               android:textColor="@color/colorWhite"
               />

           <TextView
               android:id="@+id/objective_item_type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"

               android:textSize="@dimen/item_type_height"

               android:textColor="@color/colorWhite"
               />


       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical|start"
        android:weightSum="2"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/objective_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|start"
            android:textSize="@dimen/item_type_height"
            android:textStyle="italic"

            android:textColor="@color/colorWhite"
            />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           >

           <ImageView
               android:id="@+id/objective_status_icon"
               android:layout_width="21dp"
               android:layout_height="21dp"
               android:layout_marginTop="1dp"
               android:layout_alignTop="@id/objective_progress_bar"
               android:src="@drawable/objective_pending_border"
               />

           <ProgressBar
               android:id="@+id/objective_progress_bar"
               android:layout_width="match_parent"
               android:layout_height="25dp"
               android:layout_toEndOf="@id/objective_status_icon"
               android:layout_marginStart="10dp"
               android:layout_centerVertical="true"
               android:scaleY="5"
               android:progressTint="@color/completed_green"
               android:progressBackgroundTint="@color/placeholderHint"
               style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
               />

           <TextView
               android:id="@+id/objective_data_name"
               android:layout_width="wrap_content"
               android:layout_height="25dp"
               android:layout_alignStart="@id/objective_progress_bar"
               android:layout_alignTop="@id/objective_progress_bar"
               android:layout_alignBottom="@id/objective_progress_bar"
               android:layout_marginTop="1dp"
               android:layout_marginStart="5dp"

               android:textColor="@color/colorWhite"
               />

           <TextView
               android:id="@+id/objective_progress_value"
               android:layout_width="wrap_content"
               android:layout_height="20dp"
               android:layout_alignTop="@id/objective_progress_bar"
               android:layout_alignBottom="@id/objective_progress_bar"
               android:layout_alignEnd="@id/objective_progress_bar"
               android:layout_marginTop="1dp"
               android:layout_marginEnd="5dp"

               android:textColor="@color/colorWhite"
               />


       </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/objective_display_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        android:textStyle="italic"
        />

    </LinearLayout>
