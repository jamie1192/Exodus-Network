<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:background="@color/warmindCardBackground"
        >

        <ImageView
            android:id="@+id/xur_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/image_border"
            />


        <!--set ImageView after textView so it stacks on top of background alpha-->
        <ImageView
            android:id="@+id/xur_modifier_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/xur_item_image"
            android:layout_alignLeft="@id/xur_item_image"
            android:layout_alignStart="@id/xur_item_image"
            android:layout_margin="2dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/xur_item_image"
            android:layout_toRightOf="@id/xur_item_image"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/xur_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Name"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/xur_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textStyle="italic"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/xur_item_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/xur_item_cost"
            android:layout_toLeftOf="@id/xur_item_cost"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"

             />

        <ImageView
            android:id="@+id/xur_item_cost"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>