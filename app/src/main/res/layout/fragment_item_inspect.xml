<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Vendors.fragments.ItemInspectFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!--TODO change image height-->
            <ImageView
                android:id="@+id/item_screenshot"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/item_background_placeholder"
                android:scaleType="fitXY"
                />

            <!--Item stats bars-->
            <RelativeLayout
                android:id="@+id/item_stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_screenshot"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                >

                <!--Impact text container-->
                <RelativeLayout
                    android:id="@+id/impact_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/impact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Impact"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:id="@+id/impact_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:text="100"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                    <ProgressBar
                        android:id="@+id/impact_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:indeterminate="false"

                        android:progressBackgroundTint="@color/colorWhite"
                        android:layout_below="@id/impact_value"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        />

                </RelativeLayout>

                <!--Range container-->
                <RelativeLayout
                    android:id="@+id/range_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/impact_container"
                    >

                    <TextView
                        android:id="@+id/range_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Range"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:id="@+id/range_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:text="80"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                    <ProgressBar
                        android:id="@+id/range_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:indeterminate="false"
                        android:progressBackgroundTint="@color/colorWhite"
                        android:layout_below="@id/range_value"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        />

                </RelativeLayout>

                <!--Stability Container-->
                <RelativeLayout
                    android:id="@+id/stability_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/range_container"
                    >

                    <TextView
                        android:id="@+id/stability_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stability"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:id="@+id/stability_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="100"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                    <ProgressBar
                        android:id="@+id/stability_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:indeterminate="false"
                        android:progressBackgroundTint="@color/colorWhite"
                        android:layout_below="@id/stability_value"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        />

                </RelativeLayout>

                <!--Handling container-->
                <RelativeLayout
                    android:id="@+id/handling_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stability_container"
                    >

                    <TextView
                        android:id="@+id/handling_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Handling"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:id="@+id/handling_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="100"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                    <ProgressBar
                        android:id="@+id/handling_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:indeterminate="false"
                        android:progressBackgroundTint="@color/colorWhite"
                        android:layout_below="@id/handling_value"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        />

                </RelativeLayout>

                <!--Reload speed-->
                <RelativeLayout
                    android:id="@+id/reload_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/handling_container"
                    >

                    <TextView
                        android:id="@+id/reload_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reload"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:id="@+id/reload_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="100"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                    <ProgressBar
                        android:id="@+id/reload_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:indeterminate="false"
                        android:progressBackgroundTint="@color/colorWhite"
                        android:layout_below="@id/reload_value"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        />

                </RelativeLayout>


            </RelativeLayout>

            <!--Text stats-->
            <RelativeLayout
                android:id="@+id/text_stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:layout_constraintTop_toBottomOf="@id/item_stats_container"
                >

                <LinearLayout
                    android:id="@+id/rpm_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/rpm_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="start"
                        android:text="@string/rpm"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="viewStart"
                        />

                    <TextView
                        android:id="@+id/rpm_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:layout_marginStart="15dp"
                        android:text="72"
                        android:textAlignment="viewEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>

                <!--Magazine size-->
                <LinearLayout
                    android:id="@+id/mag_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rpm_container"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/mag_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/magazine"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="viewStart"
                        />

                    <TextView
                        android:id="@+id/mag_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:text="32"
                        android:textAlignment="viewEnd"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>


            </RelativeLayout>


            <!--Item perks RView-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_inspect_perks_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_stats_container"
                >
            </android.support.v7.widget.RecyclerView>


            <!--Item mods RView-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_inspect_mods_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/item_inspect_perks_recycler">

            </android.support.v7.widget.RecyclerView>


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</RelativeLayout>