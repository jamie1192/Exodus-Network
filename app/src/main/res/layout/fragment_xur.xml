<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jastley.exodusnetwork.Vendors.XurFragment">

    <ProgressBar
        android:id="@+id/xur_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/xur_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/xur_banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/xur_location_banner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        />

                    <ImageView
                        android:id="@+id/xur_the_nine_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.25"
                        app:layout_constraintBottom_toTopOf="@id/xur_world_text"
                        android:src="@drawable/xur_icon"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/xur_world_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/xur_region_text"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                    />

                    <TextView
                        android:id="@+id/xur_region_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:textColor="@color/colorWhite"
                    />

                <android.support.v4.widget.Space
                    android:id="@+id/xur_banner_spacer_bottom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.2"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xur_banner_container"
                >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/xur_items_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </android.support.v7.widget.RecyclerView>




            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>
