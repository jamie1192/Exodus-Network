<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jastley.warmindfordestiny2.Vendors.XurFragment">

    <ProgressBar
        android:id="@+id/xur_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <android.support.constraint.ConstraintLayout
                android:id="@+id/xur_banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/xur_location_banner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        />

                       <!---->
                           <!--android:layout_width="wrap_content"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:layout_toEndOf="@id/xur_location_banner"-->
                           <!--android:layout_toRightOf="@id/xur_location_banner"-->
                           <!--android:orientation="vertical">-->

                    <android.support.v4.widget.Space
                        android:id="@+id/xur_banner_spacer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.2"
                        app:layout_constraintHeight_percent="0.3"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/xur_world_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintTop_toBottomOf="@id/xur_banner_spacer"
                        app:layout_constraintEnd_toEndOf="@id/xur_banner_container"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                    />

                    <TextView
                        android:id="@+id/xur_region_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintEnd_toEndOf="@id/xur_banner_container"
                        app:layout_constraintBottom_toTopOf="@id/xur_banner_spacer_bottom"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        android:textColor="@color/colorWhite"
                    />

                <android.support.v4.widget.Space
                    android:id="@+id/xur_banner_spacer_bottom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.2"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xur_banner_container"
                >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/xur_items_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                    </android.support.v7.widget.RecyclerView>


                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>

</FrameLayout>
