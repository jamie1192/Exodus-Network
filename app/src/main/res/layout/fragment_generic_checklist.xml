<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".checklists.fragments.GenericChecklistFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@id/checklist_bottom_navigation"
        >


    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/checklist_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemBackground="@color/warmindDark"
        app:itemIconTint="@color/nav_item_colors"
        app:itemTextColor="@color/nav_item_text_selector"

        android:background="@color/warmindDark"
        >

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>