                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/overview_valor_progress"
                        app:layout_constraintTop_toBottomOf="@id/guideline"
                        />

                    <ProgressBar
                        android:id="@+id/overview_valor_progress"
